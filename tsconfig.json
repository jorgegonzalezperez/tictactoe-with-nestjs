{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015"
        ],
        "noImplicitAny": false,
        "noLib": false,
        "moduleResolution": "node",
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "./dist",
        ".vscode"
    ]
}